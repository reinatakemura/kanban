<div class="usereditPage">
  <div class="titleArea">
    <h1>ユーザー名を編集</h1>
  </div>
  <div class="container">
    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-5, usereditForm" }, local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください"%>
      </div>
      <div class="text-center">
        <%= f.submit "ユーザー名を編集", class: "btn submitBtn" %>
    </div>
  <% end %>
</div>

